    <Style x:Key="StyleBannerButton" TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:BaseImgButton">
                    <Border Padding="5" CornerRadius="3">
                        <Border.Resources>
                            <Style TargetType="Border">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#DDDDDD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Resources>
                        <StackPanel>
                            <Image Source="{TemplateBinding ImageSource}" Width="{TemplateBinding ImageWidth}" Height="{TemplateBinding ImageHeight}" Stretch="UniformToFill"/>
                            <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
